<div class="scoreboard">
    <h2 class="hunter-title">Hunters Scoreboard</h2>
    <p>Hunters will be listed here</p>

    <table>
        <tr>
            <th>Name</th>
            <th>Current Score</th>
        </tr>
        <% @hunters.each do |hunt| %>
            <tr>
                <td><%= hunt.hunter_name %></td>
                <td><%= score(hunt) %></td>
            </tr>
            <% end %>
    </table>
</div>