<h2 class="ghost-capture-title">Congratulations <%=session[:user_name] %>, you found a ghost ! </h2>
    <div class="page-container">
	        <div class="ghost-container-outer">
        	<div class="ghost-container-inner">
                	<h1><%= @ghost.title %></h1>
	                <p> <%= @ghost.body %> </p>
        	        <%= image_tag @ghost.image, class: "ghost-image" %>
                	<%= button_to "Click here to capture", root_url + 'hunt?' + {param1: @ghost.ghost_uuid, param2: session[:hunter_uuid]}.to_param, method: :post %>
	            </div>
        	</div>
</div>
